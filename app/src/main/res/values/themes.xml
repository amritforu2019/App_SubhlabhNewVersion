<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShubhlabhVastu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redPrimary</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->
        <item name="font">@font/allerta</item>
    </style>

    <style name="sideMenuLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/largePadding</item>
        <item name="android:paddingRight">@dimen/mediumPadding</item>
        <item name="android:paddingTop">@dimen/mediumPadding</item>
        <item name="android:paddingBottom">@dimen/mediumPadding</item>
        <!--<item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>-->
        <!--<item name="android:layout_marginTop">5dp</item>-->
        <item name="android:layout_marginBottom">5dp</item>
        <item name="font">@font/allerta</item>
    </style>

    <style name="sideTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/menuTitleMargin</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">20dp</item>
        <!--<item name="android:textStyle">bold</item>-->
       <item name="font">@font/allerta</item>

    </style>
    <style name="sideSubTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="font">@font/allerta</item>

    </style>


</resources>