<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.QueryForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:padding="4dp"
                    android:src="@drawable/logo"
                    android:layout_weight="4"
                    android:contentDescription="@string/todo" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_close"
                    android:layout_weight="2"
                    android:id="@+id/iv_Goback"
                    android:contentDescription="@string/todo" />
            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp">
                    <ProgressBar
                        android:id="@+id/loader"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:visibility="visible"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/button_color_light"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fill_in_your_information"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginTop="5dp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/CallyouSortly"
                        android:textColor="@color/black"
                        android:textSize="16sp"      />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_black"
                        android:layout_margin="10dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_box"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout"
                            android:hint="TELL US YOUR FULL NAME"
                            app:boxStrokeColor="@color/black"
                            app:hintTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etName"
                                style="@style/TextInputEditText"
                                android:inputType="textPersonName" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout"
                            android:hint="ENTER DATE OF BIRTH"
                            app:boxStrokeColor="@color/black"
                            android:id="@+id/IL_DOB"
                            app:hintTextColor="@color/black">

                             <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDob"
                                style="@style/TextInputEditText"
                                android:inputType="textPersonName"
                                 android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                                 />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="PREFERE NOT TO SAY"
                                android:orientation="horizontal"
                                android:layout_marginBottom="15dp"
                                >
                                <AutoCompleteTextView
                                    android:id="@+id/etGenderDDL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:textAllCaps="true"/>

                            </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout"
                            android:hint="ENTER MOBILE NUMBER"
                            app:boxStrokeColor="@color/black"
                            app:hintTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMobile"
                                style="@style/TextInputEditText"
                                android:digits="1234567890"
                                android:inputType="phone"
                                android:maxLength="10" />
                        </com.google.android.material.textfield.TextInputLayout>
                         <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayout"
                            android:hint="@string/enter_email_address"
                            app:boxStrokeColor="@color/black"
                            app:hintTextColor="@color/black">

                             <com.google.android.material.textfield.TextInputEditText
                                 android:id="@+id/etEmail"
                                 style="@style/TextInputEditText"
                                 android:inputType="textEmailAddress" />
                         </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/light_black"
                            app:cardCornerRadius="4dp">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spPackage"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"


                             />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"
                            android:id="@+id/ILPackage"
                            android:background="@drawable/border_bg">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/package_summary"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:layout_marginTop="5dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/etPackageSummary"
                                android:minLines="5"
                                android:visibility="gone"
                                android:textSize="15dp"
                                android:text="********" />
                            <WebView
                                android:id="@+id/webview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="WebViewLayout" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25sp"
                                android:textColor="@color/holo_red_dark"
                                android:background="@drawable/alpha_gray_gradient"
                                android:text="SCAN AND PAY"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textStyle="bold" />
                            <ImageView
                                android:id="@+id/imageCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="200dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/no_image"
                                android:layout_marginEnd="15dp" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tv_qr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15sp"
                                android:padding="10dp"
                                 android:singleLine="true"
                                android:textColor="@color/green"
                                 android:text="Or Click To Pay"
                                style="@style/ThemeOverlay.Material3.Button"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                            android:id="@+id/marqueeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="10dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@color/holo_red_dark"
                           android:background="@drawable/alpha_gray_gradient"
                                android:text="@string/marquee_txt"
                                android:textSize="18sp"
                            android:textStyle="bold" />


                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayout"
                                android:hint="ENTER TRAN / REF NUMBER"
                                app:boxStrokeColor="@color/black"
                                android:tooltipText="ENTER TRANSACTION / REFERENCE NUMBER"
                                app:hintTextColor="@color/black">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTrn_ref_no"
                                    style="@style/TextInputEditText"
                                    android:digits="1234567890"
                                    android:inputType="number"
                                      />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>






                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btn_GotoForm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="7dp"
                android:backgroundTint="@color/button_color"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Submit Query "
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>